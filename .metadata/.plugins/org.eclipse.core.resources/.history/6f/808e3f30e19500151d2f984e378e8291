package screte;

import java.util.Base64;
import java.util.Base64.Decoder;
import java.util.Base64.Encoder;

public class Base64Test {
	public static String src = "i am gc base64";
	
	public static void main(String[] args) {
		//jdk对Base64编码的支持
		System.out.println("Base64编码测试");
		jdkBase64();
		System.out.println("==========================");
	}
	public static void jdkBase64(){
		Encoder encoder = Base64.getEncoder(); 
		byte[] result = encoder.encode(src.getBytes());
		System.out.println("Base64编码之后的结果:"+new String(result));
		
		Decoder decoder = Base64.getDecoder();
		result = decoder.decode(result);
		System.out.println("将result解码之后:"+new String(result));
	}
}
