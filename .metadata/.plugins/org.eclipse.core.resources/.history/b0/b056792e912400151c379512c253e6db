package Test2;

public class ChaseMethod {
	private int[][] a;
	private int[] x;
	private int[] d;
	private int[] y;
	private int[] u;
	private int[] c;
	private int[] l;
	private int[] b;
	public ChaseMethod(int[][] aa, int[] dd, int numofx){
		this.a = aa;
		this.d = dd;
		x = new int[numofx];
		y = new int[d.length];
		c = new int[d.length];
		l = new int[d.length];
		u = new int[d.length];
		b = new int[d.length];
		for(int i = 0; i < b.length; i++){
			b[i] = a[i][i];
		}
		
		u[0] = b[0];
		y[0] = d[0];
		
	}
	public int[] getX(){
		return x;
	}
}
