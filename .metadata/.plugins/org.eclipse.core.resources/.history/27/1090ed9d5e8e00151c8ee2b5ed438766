enum Season{
	RED("红色",1),GREEN("绿色",2);
	
	private String name;
	private int index;
	private Season(String name, int index){
		this.name =name;
		this.index = index;
	}
	
	public String toString(){
		return "name = "+name+", index = "+index;
	}
	
	public void setName(String name){
		this.name = name;
	}
	public String getName(){
		return this.name();
	}
	public int  getIndex(){
		return this.index;
	}
	public static String getName(int index){
		for(Season s : Season.values()){
			if(s.getIndex() == index){
				return s.getName();
			}
		}
		return null;
	}
}

public class EnumTest {
	public static void main(String[] args) {
		Season s = Season.RED;
		System.out.println(Season.getName(1));
		
	}
}
